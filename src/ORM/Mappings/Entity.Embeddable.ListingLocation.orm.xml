<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance">

    <embeddable name="App\Core\Listing\Entity\Embeddable\ListingLocation">
        <field name="country"/>
        <field name="city"/>
        <field name="postCode"/>
        <field name="street"/>
        <field name="streetNumber"/>
        <field name="latitude" type="float"/>
        <field name="longitude" type="float"/>
        <field name="coordinates" type="geometry"/>
    </embeddable>

</doctrine-mapping>